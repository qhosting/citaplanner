
# Base de datos
DATABASE_URL="postgresql://usuario:password@localhost:5432/citaplanner_mvp"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu-secret-key-muy-seguro-aqui"

# Master Password (Panel de Administración)
# Generar hash: node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('TU_PASSWORD', 12).then(hash => console.log(hash))"
MASTER_PASSWORD_HASH="$2a$12$ejemplo.hash.aqui.reemplazar.con.tu.hash.real"

# OpenPay (Pagos - México)
OPENPAY_ID="tu-merchant-id"
OPENPAY_PRIVATE_KEY="tu-private-key"
OPENPAY_PUBLIC_KEY="tu-public-key"
OPENPAY_MODE="sandbox" # o "production"

# SMS/WhatsApp (opcional)
TWILIO_ACCOUNT_SID="tu-twilio-sid"
TWILIO_AUTH_TOKEN="tu-twilio-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Configuración de la aplicación
NODE_ENV="development"
