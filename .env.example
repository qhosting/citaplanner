
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/citaplanner

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Sistema de Notificaciones
NOTIFICATION_AUTOMATION_ENABLED=true
CRON_SECRET=generate-a-secure-random-token-here
NOTIFICATION_LOG_RETENTION_DAYS=90

# VAPID Keys para Push Notifications
# Generar con: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# Evolution API (WhatsApp)
EVOLUTION_API_URL=https://your-evolution-api-url.com
EVOLUTION_API_KEY=your-evolution-api-key-here
WHATSAPP_INSTANCE_NAME=citaplanner

# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@citaplanner.com

# SMS (opcional)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890
